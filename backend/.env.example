# AayuCare Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/aayucare

# JWT Configuration (CRITICAL SECURITY)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_or_use_crypto_random_bytes
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Frontend URL (for CORS whitelist)
FRONTEND_URL=http://localhost:3000

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Email Configuration (Optional - for password reset)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@aayucare.com
